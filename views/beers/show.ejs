<h1 class="page-title"><%= beer.name %></h1>

<div class="row show-page">
  <div class="col-md-12 offset-md-3 show-beer">
    <p><%= beer.tagline %></p>
    <p><%= beer.description %></p>
    <p><%= beer.abv %> %</p>
    <p>Average rating: <%= avg %>/10</p>
    <div class="col-md-6 show-image">
      <img class="show-img" src="<%= beer.image %>">
    </div>
  </div>

  <div class="col-md-12 offset-md-3 show-comment">
    <form action="/beers/<%= beer._id %>" method="post">
      <div class="box box-orange box-example-1to10">
        <div class="box-header">Rate this beer</div>
        <div class="box-body">
          <select id="example-1to10" name="rating" autocomplete="off">
            <option value="1" selected="selected">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
          </select>
        </div>
      </div>
      <textarea name="body" rows="4" cols="60"></textarea><br>
      <button type="submit" class="btn btn-warning" name="action">Comment</button>
    </form>
  </div>

  <div class="btn-wrapper">
    <div class="btn-group" role="group" aria-label="Basic example">
      <button type="submit" name="action" class="btn btn-warning"><a href="/beers/<%= beer._id %>/favourite">Favourite</a></button>
      <button class="btn btn-warning"><a href="/beers/<%= beer._id %>/edit">Edit</a></button>
      <form action="/beers/<%= beer.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button class="btn btn-warning">Delete</button>
      </form>
    </div>
  </div>

  <div class="show-comment-display">
    <h2>Comments</h2>
  <br>
    <ul>
    <% beer.comments.forEach(comment => { %>
      <li><%= comment.username %> <br> &middot; <%= comment.body %> &middot; <%= comment.rating %>/10</li></br><hr>
    <% }) %>
    </ul>
  </div>


</div>
